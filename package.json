{
    "name": "react-typescript-tailwindcss-webpack5-starter",
    "version": "1.0.0",
    "description": "React 18, TypeScript, Tailwind CSS, and Webpack 5 starter template.",
    "keywords": [
        "react 18",
        "typescript",
        "tailwindcss",
        "webpack 5",
        "starter"
    ],
    "license": "MIT",
    "author": {
        "name": "Ignacio Villamar",
        "email": "iggy@ivstudio.com",
        "url": "https://github.com/ivstudio"
    },
    "homepage": "https://ivstudio.github.io/react-typescript-tailwindcss-webpack5-starter",
    "scripts": {
        "test": "jest",
        "analyze": "ANALYZE=true npm run build",
        "build": "webpack --config webpack/webpack.prod.ts",
        "coverage": "jest --coverage",
        "format": "prettier --write src",
        "lint": "eslint ./src",
        "lint:debug": "eslint ./src --debug",
        "lint:fix": "eslint ./src --fix",
        "prepare": "husky",
        "start": "node ./dist/server/server.js",
        "dev:client": "webpack serve --config webpack/webpack.dev.ts",
        "dev:server": "webpack --watch --config webpack/webpack.server.ts",
        "dev": "concurrently -p \"[{name}]\" -c auto --kill-others \"npm:dev:client\" \"npm:dev:server\""
    },
    "dependencies": {
        "dotenv": "^16.4.7",
        "express": "^4.21.2",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "react-router-dom": "^6.28.0"
    },
    "devDependencies": {
        "@babel/core": "^7.26.7",
        "@babel/plugin-transform-runtime": "^7.25.9",
        "@babel/preset-env": "^7.26.7",
        "@babel/preset-react": "^7.26.3",
        "@babel/preset-typescript": "^7.26.0",
        "@eslint/js": "^9.19.0",
        "@fullhuman/postcss-purgecss": "^7.0.2",
        "@testing-library/dom": "^10.4.0",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.1.0",
        "@testing-library/user-event": "^14.6.0",
        "@types/eslint-config-prettier": "^6.11.3",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.13.0",
        "@types/react": "^19.0.8",
        "@types/react-dom": "^18.3.1",
        "@types/webpack-bundle-analyzer": "^4.7.0",
        "@types/webpack-node-externals": "^3.0.4",
        "autoprefixer": "^10.4.20",
        "babel-loader": "^9.2.1",
        "compression-webpack-plugin": "^11.1.0",
        "concurrently": "^9.1.2",
        "css-loader": "^7.1.2",
        "css-minimizer-webpack-plugin": "^7.0.0",
        "eslint": "^9.17.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-react": "^7.37.4",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "eslint-plugin-tailwindcss": "^3.18.0",
        "file-loader": "^6.2.0",
        "globals": "^15.14.0",
        "html-webpack-plugin": "^5.6.3",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "mini-css-extract-plugin": "^2.9.2",
        "nodemon-webpack-plugin": "^4.8.2",
        "postcss": "^8.5.1",
        "postcss-loader": "^8.1.1",
        "prettier": "^3.4.2",
        "prettier-plugin-tailwindcss": "^0.6.11",
        "tailwindcss": "^3.4.17",
        "ts-loader": "^9.5.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.7.3",
        "typescript-eslint": "^8.19.1",
        "webpack": "^5.97.1",
        "webpack-bundle-analyzer": "^4.10.2",
        "webpack-cli": "^6.0.1",
        "webpack-dev-server": "^5.2.0",
        "webpack-manifest-plugin": "^5.0.0",
        "webpack-merge": "^6.0.1",
        "webpack-node-externals": "^3.0.0"
    },
    "engines": {
        "node": ">=22.0.0"
    }
}
